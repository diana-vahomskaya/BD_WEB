@model Workers.Models.PlaceViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Список работников</h1>

<p>
    <a asp-action="Create">Создать нового сотрудника</a>
</p>
<form asp-controller="WorkersModels" asp-action="Index" method="get">
    <p>
        <select asp-for="WorkersPlace" asp-items="Model.Place">
            <option value="">All</option>
        </select>

        Поиск по имени: <input type="text" name="SearchString">
        <input type="submit" value="Поиск" />
    </p>
</form>
<table class="table" , style="background-color: #ffffff">
    <thead style=" background-color: #f5f5f5">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.workers[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.workers[0].Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.workers[0].Birthday)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.workers[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.workers[0].Place)
            </th>
            <!--<th>
                @Html.DisplayNameFor(model => model.workers[0].Login)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.workers[0].Password)
            </th>-->
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.workers)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Surname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Birthday)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Place)
                </td>
                <!-- <td>
                    @Html.DisplayFor(modelItem => item.Login)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Password)
                </td>-->
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Изменить</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Детали</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>
